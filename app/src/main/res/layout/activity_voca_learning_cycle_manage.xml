<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VocaLearningCycleManage">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4a4646"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/Toolbar_vocaLearningCycleManage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:contentDescription="@string/goback"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/abc_vector_test"
            android:id="@+id/ImageButton_vocaLearningCycleManage_goback"
            tools:layout_editor_absoluteY="116dp"
            app:layout_constraintStart_toStartOf="@+id/Toolbar_vocaLearningCycleManage"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@+id/Toolbar_vocaLearningCycleManage"
            app:layout_constraintBottom_toBottomOf="@+id/Toolbar_vocaLearningCycleManage"/>
    <TextView
            android:text="@string/titlevocaLearningCycleManage"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ImageButton_vocaLearningCycleManage_title"
            app:layout_constraintStart_toStartOf="@+id/Toolbar_vocaLearningCycleManage"
            app:layout_constraintEnd_toEndOf="@+id/Toolbar_vocaLearningCycleManage"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@+id/Toolbar_vocaLearningCycleManage" android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/Toolbar_vocaLearningCycleManage" android:layout_marginBottom="16dp"/>

    <View
            android:id="@+id/divider_vocaLearningCycleManage_left"
            android:layout_width="1dp"
            android:layout_height="729dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="1dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1dp"/>
    <View
            android:id="@+id/divider_vocaLearningCycleManage_right"
            android:layout_width="1dp"
            android:layout_height="729dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="1dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1dp"/>
    <View
            android:id="@+id/divider_vocaLearningCycleManage_upper"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@+id/Toolbar_vocaLearningCycleManage"
            android:layout_marginTop="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="1dp" android:layout_marginStart="1dp" android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp" app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ListView_vocaLearningCycleManage_listview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/divider_vocaLearningCycleManage_upper"
            app:layout_constraintStart_toEndOf="@+id/divider_vocaLearningCycleManage_left"
            app:layout_constraintEnd_toStartOf="@+id/divider_vocaLearningCycleManage_right"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_menu_add"
            android:backgroundTint="@color/colorBlack"
            android:id="@+id/floatingActionButton"
            app:layout_constraintEnd_toStartOf="@+id/divider_vocaLearningCycleManage_right"
            android:layout_marginEnd="1dp" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/ListView_vocaLearningCycleManage_listview"/>


</androidx.constraintlayout.widget.ConstraintLayout>