<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".VocaLearningCycleModify">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4a4646"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/Toolbar_vocaLearningCycleModify"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:contentDescription="@string/goback"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/abc_vector_test"
            android:id="@+id/ImageButton_vocaLearningCycleModify_goback"
            tools:layout_editor_absoluteY="116dp"
            app:layout_constraintStart_toStartOf="@+id/Toolbar_vocaLearningCycleModify"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@+id/Toolbar_vocaLearningCycleModify"
            app:layout_constraintBottom_toBottomOf="@+id/Toolbar_vocaLearningCycleModify"/>
    <TextView
            android:text="@string/titlevocaLearningCycleModify"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ImageButton_vocaLearningCycleModify_title"
            app:layout_constraintStart_toStartOf="@+id/Toolbar_vocaLearningCycleModify"
            app:layout_constraintEnd_toEndOf="@+id/Toolbar_vocaLearningCycleModify"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@+id/Toolbar_vocaLearningCycleModify" android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/Toolbar_vocaLearningCycleModify" android:layout_marginBottom="16dp"/>
    <Button
            android:text="@string/modify"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/buttonshape"
            android:id="@+id/Button_vocaLearningCycleModify_modify"
            app:layout_constraintEnd_toEndOf="@+id/Toolbar_vocaLearningCycleModify"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/Toolbar_vocaLearningCycleModify"
            app:layout_constraintBottom_toBottomOf="@+id/Toolbar_vocaLearningCycleModify"/>

    <View
            android:id="@+id/divider_vocaLearningCycleModify_left"
            android:layout_width="1dp"
            android:layout_height="729dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="1dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1dp"/>
    <View
            android:id="@+id/divider_vocaLearningCycleModify_right"
            android:layout_width="1dp"
            android:layout_height="729dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="1dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="1dp"/>


    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@+id/divider_vocaLearningCycleModify_left"
            app:layout_constraintEnd_toEndOf="@id/divider_vocaLearningCycleModify_right"
            app:layout_constraintTop_toBottomOf="@+id/Toolbar_vocaLearningCycleModify"
            app:layout_constraintBottom_toBottomOf="parent"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="@string/vocaLearningCycleName"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextView_vocaLearningCycleModify_vocaLearningCycleName"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="50dp"
                        app:layout_constraintStart_toStartOf="parent"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textNoSuggestions"
                        android:imeOptions="actionDone"
                        android:hint="@string/vocaLearningCycleNameExample"
                        android:ems="10"
                        android:cursorVisible="false"
                        android:id="@+id/EditText_vocaLearningCycleModify_vocaLearningCycleNameInput"
                        app:layout_constraintTop_toBottomOf="@+id/TextView_vocaLearningCycleModify_vocaLearningCycleName"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="@+id/TextView_vocaLearningCycleModify_vocaLearningCycleName"/>

                <TextView
                        android:text="@string/vocaLearningCycleArea1"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextView_vocaLearningCycleModify_vocaLearningCycleArea1"
                        app:layout_constraintTop_toBottomOf="@+id/EditText_vocaLearningCycleModify_vocaLearningCycleNameInput"
                        android:layout_marginTop="24dp"
                        app:layout_constraintStart_toStartOf="parent"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:hint="@string/vocaLearningCycleAreaExample"
                        android:ems="10"
                        android:cursorVisible="false"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/EditText_vocaLearningCycleModify_vocaLearningCycleArea1Input"
                        app:layout_constraintTop_toBottomOf="@+id/TextView_vocaLearningCycleModify_vocaLearningCycleArea1"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
                <TextView
                        android:text="@string/vocaLearningCycleArea2"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextView_vocaLearningCycleModify_vocaLearningCycleArea2"
                        app:layout_constraintTop_toBottomOf="@+id/EditText_vocaLearningCycleModify_vocaLearningCycleArea1Input"
                        android:layout_marginTop="24dp"
                        app:layout_constraintStart_toStartOf="parent"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:hint="@string/vocaLearningCycleAreaExample"
                        android:ems="10"
                        android:cursorVisible="false"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/EditText_vocaLearningCycleModify_vocaLearningCycleArea2Input"
                        app:layout_constraintTop_toBottomOf="@+id/TextView_vocaLearningCycleModify_vocaLearningCycleArea2"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>


                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/ListView_vocaLearningCycleModify_listview"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:divider="#00000000"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/EditText_vocaLearningCycleModify_vocaLearningCycleArea2Input"
                        app:layout_constraintBottom_toTopOf="@+id/TextView_vocaLearningCycleModify_areaAdd">

                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                        android:text="@string/vocaLearningCycleAreaAdd"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TextView_vocaLearningCycleModify_areaAdd"
                        app:layout_constraintTop_toBottomOf="@+id/ListView_vocaLearningCycleModify_listview"
                        android:layout_marginTop="24dp"
                        app:layout_constraintStart_toStartOf="@+id/TextView_vocaLearningCycleModify_vocaLearningCycleName"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="24dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>